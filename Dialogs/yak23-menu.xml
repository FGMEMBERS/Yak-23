<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <default>
    <menu n="10">
      <label>Yak 23</label>
      <enabled type="bool">true</enabled>
      <item>
        <label>Autostart</label>
        <binding>
          <command>nasal</command>
          <script>engines.autostart();</script>
        </binding>
      </item>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>
      <item>
        <label>Reload guns</label>
        <binding>
          <command>nasal</command>
          <script>guns.reload_guns();</script>
        </binding>
      </item>
      <item>
        <label>Unlimited guns</label>
        <binding>
          <command>nasal</command>
          <script>guns.unlimited_guns();</script>
        </binding>
      </item>
      <item>
        <label>Show/hide tanks</label>
        <binding>
          <command>property-toggle</command>
          <property>/sim/model/hide-tanks</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>sim/multiplay/generic/int[6]</property>
        </binding>
      </item>
      <!--
      <item>
        <label>Immatriculation</label>
        <binding>
          <command>nasal</command>
          <script>yak23.immat_dialog.toggle()</script>
        </binding>
      </item>
      -->
    </menu>
  </default>

</PropertyList>
